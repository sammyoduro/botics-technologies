<% include ../partials/ecommerce-hd %>
<!-- ========================= SECTION MAIN ========================= -->
<section class="section-main bg padding-y-sm">
<div class="container">
<div class="card">
	<div class="card-body">
<div class="row row-sm">
  <aside class="col-md-3">
<div class="card">
<header class="card-header bg-secondary white">
	<i class="icon-menu"></i> Categories
</header>
	<ul class="menu-category">
		<% for(var i=0;i<6;i++){%>
			<li><a href="/Search/q?searchbox=<%= itemcat[i].item_category %>&&SearchFilter=Items"><%= itemcat[i].item_category %></a></li>
			<% if (i == 5){%>
				<li class="has-submenu"> <a href="#">More categories  <i class="icon-arrow-right pull-right"></i></a>
					<ul class="submenu">
				<% for (var k = 6;k<itemcat.length;k++){ %>
					<li><a href="/Search/q?searchbox=<%= itemcat[i].item_category %>&&SearchFilter=Items"><%= itemcat[k].item_category %></a></li>
				<%}%>
				</ul>
				</li>
		<%}}%>
	</ul>
</div> <!-- card.// -->
	</aside> <!-- col.// -->
  <aside class="col-md-6">
<!-- 2-carousel bootstrap -->
<div id="carousel2_indicator" class="carousel slide carousel-fade" data-ride="carousel" style="">
  <div class="carousel-inner" style="width: 403px;margin: 0 auto;">
    <div class="carousel-item active">
      <img class="d-block w-100" src="../../images/<%= Pshuffle[0].imagePath_one %>" alt="First slide" height="400px">
      <article class="carousel-caption d-none d-md-block" style="background:#000;padding:5px;border-radius:5px;opacity:0.7">
	    <h5><%= Pshuffle[0].title %></h5>
	  </article> <!-- carousel-caption .// -->
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="../../images/<%= Pshuffle[1].imagePath_one %>" alt="Second slide" height="400px">
      <article class="carousel-caption d-none d-md-block" style="background:#000;padding:5px;border-radius:5px;opacity:0.7">
	    <h5><%= Pshuffle[1].title %></h5>
	  </article> <!-- carousel-caption .// -->
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="../../images/<%= Pshuffle[2].imagePath_one %>" alt="Third slide" height="400px">
      <article class="carousel-caption d-none d-md-block" style="background:#000;padding:5px;border-radius:5px;opacity:0.7">
	    <h5><%= Pshuffle[2].title %></h5>
	  </article> <!-- carousel-caption .// -->
    </div>
  </div>
  <a class="carousel-control-prev" href="#carousel2_indicator" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carousel2_indicator" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
<!-- ==================  2-carousel bootstrap.// ==================  -->
	</aside>
	<aside class="col-md-3">
		<h6 class="title-bg bg-secondary"> Recomended Components</h6>
		<div style="height:280px;">
			<%for(var i=0;i<Pshuffle.length;i++){%>
			<figure class="itemside has-bg border-bottom" style="height: 34%;margin-bottom:20px">
				<img class="img-bg" src="../../images/<%= Pshuffle[i].imagePath_one %>">
				<figcaption class="p-2">
					<h6 class="title"><%= Pshuffle[i].title%> </h6>
					<a href="/pages/store-front/product_detail/p/?q=<%= Pshuffle[i]._id %>">more info</a>
				</figcaption>
			</figure>
			<%}%>
		</div>

	</aside>
</div> <!-- row.// -->
	</div> <!-- card-body .// -->
</div> <!-- card.// -->


</div> <!-- container .//  -->
</section>
<!-- ========================= SECTION MAIN END// ========================= -->
<!-- ========================= SECTION CONTENT ========================= -->
<section class="section-content bg padding-y-sm">
<div class="container">

<header class="section-heading heading-line">
	<h4 class="title-section bg text-uppercase">Items list</h4>
</header>

<div class="row-sm">
	<% for (var i = 0; i < products.length; i++) { %>
<div class="col-md-3 col-sm-6">
	<figure class="card card-product">
		<div class="img-wrap"> <img src="../../images/<%= products[i].imagePath_one %>"></div>
		<figcaption class="info-wrap">
			<a href="/pages/store-front/product_detail/p/?q=<%= products[i].id %>" class="title"><%= products[i].title %></a>
			<div class="price-wrap">
				<span class="price-new">Ghc <%= products[i].price %></span>
				<a href="/pages/store-front/product_detail/p/?q=<%= products[i].id %>" class="btn btn-sm btn-primary float-right" >Order Now</a>
        <button type="button" id="<%= products[i].id %>" class="btn btn-sm btn-warning float-right addtocart" style="margin-right:10px"><i class="fa fa-shopping-cart"></i></button>
			</div> <!-- price-wrap.// -->
		</figcaption>
	</figure> <!-- card // -->
</div> <!-- col // -->
<%   }; %>

</div> <!-- row.// -->

<nav aria-label="Page navigation" >
        <ul class="pagination justify-content-center">
              <% if (current == 1) { %>
                  <li class="page-item disabled"><a class="page-link">First</a></li>
              <% } else { %>
                  <li class="page-item"><a class="page-link" href="/pages/store-front/1">First</a></li>
              <% } %>
              <% var i = (Number(current) > 3 ? Number(current) - 2 : 1) %>
              <% if (i !== 1) { %>
                  <li class="page-item disabled"><a class="page-link" >...</a></li>
              <% } %>
              <% for (; i <= (Number(current) + 2) && i <= pages; i++) { %>
                  <% if (i == current) { %>
                      <li class="page-item active"><a class="page-link" ><%= i %></a></li>
                  <% } else { %>
                      <li class="page-item"><a class="page-link"  href="/pages/store-front/<%= i %>"><%= i %></a></li>
                  <% } %>
                  <% if (i == Number(current) + 2 && i < pages) { %>
                      <li class="page-item disabled"><a class="page-link" >...</a></li>
                  <% } %>
              <% } %>
              <% if (current == pages) { %>
                  <li class="page-item disabled"><a class="page-link">Last</a></li>
              <% } else { %>
                  <li class="page-item"><a class="page-link" href="/pages/store-front/<%= pages %>">Last</a></li>
              <% } %>
          </ul>
      </nav>

</div><!-- container // -->
</section>
<!-- ========================= SECTION CONTENT .END// ========================= -->
<!-- ========================= FAQ END// ========================= -->
